# Production Environment Variables

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# Database (Use managed service like AWS RDS)
DATABASE_HOST=your-rds-endpoint.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=tribecore_prod
DATABASE_USER=tribecore_prod_user
DATABASE_PASSWORD=your-strong-production-password
DATABASE_SSL=true
DATABASE_SYNC=false
DATABASE_LOGGING=false

# Redis (Use managed service like AWS ElastiCache)
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_TTL=3600

# JWT (Use strong secrets)
JWT_SECRET=your-super-strong-jwt-secret-min-32-chars
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-strong-refresh-secret-min-32-chars
JWT_REFRESH_EXPIRATION=30d

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=tribecore-documents-prod

# Authentication
AUTH_PROVIDER=local
AWS_COGNITO_USER_POOL_ID=
AWS_COGNITO_CLIENT_ID=

# Payment Gateways
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
WISE_API_KEY=your_wise_production_api_key

# Email
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_production_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=TribeCore

# Document Signing
DOCUSIGN_INTEGRATION_KEY=your_docusign_production_key
DOCUSIGN_USER_ID=your_docusign_user_id
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id

# Logging & Monitoring
LOG_LEVEL=info
DATADOG_API_KEY=your_datadog_api_key
SENTRY_DSN=your_sentry_dsn

# CORS
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Encryption
ENCRYPTION_KEY=your-32-char-encryption-key-prod
