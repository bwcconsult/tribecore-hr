{
  "name": "tribecore",
  "version": "1.0.0",
  "description": "The Future of Global HR, Payroll & Employee Management SaaS",
  "author": "TribeCore Team",
  "license": "MIT",
  "scripts": {
    "setup": "npm run setup:backend && npm run setup:frontend && npm run verify",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "verify": "node verify-setup.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:frontend": "cd frontend && rm -rf node_modules dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "hr",
    "payroll",
    "employee-management",
    "saas",
    "human-resources",
    "attendance",
    "leave-management",
    "performance-management",
    "recruitment",
    "ats",
    "learning-management",
    "benefits-administration",
    "expense-management",
    "time-tracking",
    "analytics"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/tribecore"
  },
  "bugs": {
    "url": "https://github.com/your-org/tribecore/issues"
  },
  "homepage": "https://github.com/your-org/tribecore#readme"
}
